{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Human Life Expectancy",
  "data": {
    "url": "https://raw.githubusercontent.com/ACTP2002/FIT3179/main/HomeworkWeek10/data/HumanLifeExpectancy.csv"
  },
  "encoding": {
    "x": {
      "field": "2010",
      "type": "quantitative",
      "title": "Year 2010",
      "axis": {"tickCount": 10},
      "scale": {"type": "linear", "domain": [40, 90]}
    },
    "y": {
      "field": "2019",
      "type": "quantitative",
      "title": "Year 2019",
      "axis": {"tickCount": 10},
      "scale": {"type": "linear", "domain": [40, 90]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "color": {
          "field": "Country",
          "type": "nominal"
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "2010", "type": "quantitative", "format": ","},
          {"field": "2019", "type": "quantitative", "format": ","}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'Yemen' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "2010", "type": "quantitative", "format": ","},
          {"field": "2019", "type": "quantitative", "format": ","}
        ]
      }
    }
  ]
}
